<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background"><!-- android:drawable="@drawable/background_fill" -->
        <shape>
            <corners android:radius="0px" />

            <solid android:color="#FFFFFF" />

            <stroke
                android:width="1px"
                android:color="#000000" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <!-- <gradient
                    android:angle="270"
                    android:centerColor="#94c5f2"
                    android:centerY="0.75"
                    android:endColor="#94c5f2"
                    android:startColor="#94c5f2" /> -->
                 <solid android:color="#FF333333" />

                <stroke
                    android:width="1px"
                    android:color="#000000" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
       <!--  <clip android:drawable="@drawable/progress_fill" /> -->
       <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#288ae5"
                    android:centerY="0.75"
                    android:endColor="#499dea"
                    android:startColor="#007af0" />

                <stroke
                    android:width="1px"
                    android:color="#000000" />
            </shape>
        </clip>
    </item>
     

</layer-list>